    <!--Max of Three-->
    <div class="modal fade" id="maxOfThree" tabindex="-1" role="dialog" aria-labelledby="maxOfThree" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="color: black;">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Max of Three</h4>
                </div>
                <div class="modal-body" style="color: black;">
                    <h3>Input three numbers in the boxes below and press the perform button below to display the largest of the three.</h3><br />
                    <input type="number" id="num1" />  <input type="number" id="num2" />  <input type="number" id="num3" /><br />
                    <p></p>
                    <p>Result: <span id="maxOutput"></span></p>
                </div>
                <div class="modal-body">
                    <pre class="brush: js">
function maxThree() {
    var n1 = document.getElementById('num1').value;
    var n2 = document.getElementById('num2').value;
    var n3 = document.getElementById('num3').value;
    var largest = parseInt(n1);
    if (n2 > largest) {
        largest = n2;
    }
    if (n3 > largest) {
        largest = n3;
    }
    document.getElementById('maxOutput').innerHTML = largest;
}
                </pre>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="maxThree()">Perform</button>
                </div>
            </div>
        </div>
    </div>
    <!--Sum or Multiply-->
